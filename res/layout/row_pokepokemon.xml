<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="2.5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="2.5dp"
    android:background="@drawable/list_item_activated_background" >
        <TextView
            android:id="@+id/row_pokepokemon_surnom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/row_pokepokemon_niveau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokepokemon_surnom" />
        <TextView
            android:id="@+id/row_pokepokemon_capture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokepokemon_niveau" />
        <TextView
            android:id="@+id/row_pokepokemon_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokepokemon_capture" />
        <TextView
            android:id="@+id/row_pokepokemon_attaque1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokepokemon_type" />
        <TextView
            android:id="@+id/row_pokepokemon_attaque2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokepokemon_attaque1" />
        <TextView
            android:id="@+id/row_pokepokemon_attaque3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokepokemon_attaque2" />
        <TextView
            android:id="@+id/row_pokepokemon_attaque4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_pokepokemon_attaque3" />

</RelativeLayout>
