<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <RelativeLayout
            android:id="@+id/pokearene_data_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" >
            <TextView
                android:id="@+id/pokearene_nom_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pokearene_nom_label"/>
            <TextView
                android:id="@+id/pokearene_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_below="@+id/pokearene_nom_label" />
            <TextView
                android:id="@+id/pokearene_maitre_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokearene_nom"
                android:text="@string/pokearene_maitre_label"/>
            <TextView
                android:id="@+id/pokearene_maitre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_below="@+id/pokearene_maitre_label" />
            <TextView
                android:id="@+id/pokearene_dresseurs_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokearene_maitre"
                android:text="@string/pokearene_dresseurs_label"/>
            <TextView
                android:id="@+id/pokearene_dresseurs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_below="@+id/pokearene_dresseurs_label" />
            <TextView
                android:id="@+id/pokearene_badge_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokearene_dresseurs"
                android:text="@string/pokearene_badge_label"/>
            <TextView
                android:id="@+id/pokearene_badge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_below="@+id/pokearene_badge_label" />
            <TextView
                android:id="@+id/pokearene_zone_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokearene_badge"
                android:text="@string/pokearene_zone_label"/>
            <TextView
                android:id="@+id/pokearene_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_below="@+id/pokearene_zone_label" />
            <TextView
                android:id="@+id/pokearene_position_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pokearene_zone"
                android:text="@string/pokearene_position_label"/>
            <TextView
                android:id="@+id/pokearene_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:layout_below="@+id/pokearene_position_label" />
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/pokearene_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/pokearene_not_found" />
</RelativeLayout>
