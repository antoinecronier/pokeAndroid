<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:harmony="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:id="@+id/pokebadge_nom_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pokebadge_nom_label"/>
    <EditText
        android:id="@+id/pokebadge_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@+id/pokebadge_nom_label" />
    <TextView
        android:id="@+id/pokebadge_bonus_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokebadge_nom"
        android:text="@string/pokebadge_bonus_label"/>
    <com.antoinecronier.pokebattle.harmony.widget.EnumSpinner
        android:id="@+id/pokebadge_bonus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pokebadge_bonus_label" />
</RelativeLayout>
